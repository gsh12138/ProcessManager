@using ProcessManager.Models
@model CuLiGuoCheng

<a data-toggle="modal" href="#weijiejue-form" class="btn btn-white btn-xs" data-placement="left" title="Plug this message"><i class="fa fa-plug"></i> 未解决</a>
<div id="weijiejue-form" class="modal fade" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="m-t-none m-b">反馈异常</h3>
                        <form role="form" method="post" action="/YiChangChuLi/fanKuiYiChang">
                            @Html.HiddenFor(m => m.id)
                            <div class="form-group">
                                <label>反馈结果</label>
                                @Html.TextAreaFor(m => m.xgqr, new {
                               @class = "form-control",
                               rows = "8"
                           })
                            </div>
                            
                            <div>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>提交</strong></button>

                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

